# API Security and Routing Configuration

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Content-Security-Policy "default-src 'self'; script-src 'none'; style-src 'none'; img-src 'none';"

# CORS Headers (adjust as needed for your domain)
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-API-Key"
Header always set Access-Control-Max-Age "86400"

# Handle CORS preflight requests
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API Routing Rules
RewriteEngine On

# API v1 Routes
RewriteRule ^v1/?$ v1/index.php [L]
RewriteRule ^v1/courses/?$ v1/courses.php [L]
RewriteRule ^v1/courses/([0-9]+)/?$ v1/courses.php?id=$1 [L]
RewriteRule ^v1/auth/?$ v1/auth.php [L]
RewriteRule ^v1/user/?$ v1/user.php [L]
RewriteRule ^v1/newsletter/?$ v1/newsletter.php [L]

# Block access to sensitive files
<Files "*.sql">
    Order deny,allow
    Deny from all
</Files>

<Files "*.log">
    Order deny,allow
    Deny from all
</Files>

# Rate limiting (if using mod_evasive)
# <IfModule mod_evasive24.c>
#     DOSHashTableSize    2048
#     DOSPageCount        10
#     DOSPageInterval     1
#     DOSSiteCount        50
#     DOSSiteInterval     1
#     DOSBlockingPeriod   600
# </IfModule>

# Hide PHP version
ServerTokens Prod
Header unset X-Powered-By

# Prevent access to PHP files directly (except API endpoints)
<FilesMatch "\.php$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Allow API endpoints
<FilesMatch "^(index|courses|auth|user|newsletter|login-status|weather)\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>